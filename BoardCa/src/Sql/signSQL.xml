<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="signXml">

	<!--  -->
	<select id="idCheck" resultType="int" parameterType="MemberDto">
		select count(*)
		from MEMBER_T
		where MEM_ID=#{userId}
	</select>
	
	<select id="Listall" resultType="MemberDto">
	
		select *
		from MEMBER_T;
	
	</select>
	
	<select id="nickNameCheck" resultType="int" parameterType="MemberDto">
		select count(*)
		from MEMBER_T
		where MEM_NICKNAME=#{mem_nickname}
	</select>

	<select id="signCheck" resultType="String"
		parameterType="MemberDto">
		select mem_pw
		from MEMBER_T
		where MEM_ID=#{userId}
	</select>
	<select id="searchIdx" resultType="int" parameterType="MemberDto">
		SELECT MEM_IDX
		FROM MEMBER_T 
		WHERE MEM_ID = #{userId}	
	</select>
	
	<insert id="sessionInput" parameterType="SessionDto">
		INSERT INTO SESSION_T
		( 	MEM_IDX
			,SESS_IP
			,SESS_MOVE
			,SESS_FIELD
		)VALUES(
			#{mem_idx}
			,#{sess_ip}
			,#{sess_move}
			,#{sess_field}
		)
	</insert>

	<insert id="memInsert" parameterType="MemberDto">
		INSERT INTO MEMBER_T
		(	MEM_ID
			,MEM_NICKNAME
			,MEM_PW
			,MEM_AGE_GROUP
			,MEM_GENDER
			,MEM_EMAIL
			,MEM_ROCAL
			,MEM_STATE
			,MEM_MNG_GWONHAN
			,MEM_LOGIN_GWONHAN
			,MEM_BOARD_GWONHAN
		)
		VALUES(
			#{mem_id}
			,#{mem_nickname}
			,#{mem_pw}
			,#{mem_age_group}
			,#{mem_gender}
			,#{mem_email}
			,#{mem_rocal}
			,#{mem_state}
			,#{mem_mng_gwonhan}
			,#{mem_login_gwonhan}
			,#{mem_board_gwonhan}
		)
	</insert>



</mapper>