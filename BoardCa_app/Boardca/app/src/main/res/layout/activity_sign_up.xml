<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 이미지 뷰 / 순서 -->

        <RelativeLayout
            android:id="@+id/signin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:text="가\n입"
                android:textSize="25sp" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:background="#cccccc" />

            <!-- 첫번째 -->

            <ImageView
                android:id="@+id/sign_cheke1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/trumpet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/signin_check" />

            <!-- 두번째 -->

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/trumpet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginStart="145dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/signin_check" />

            <!-- 세번째 -->

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/trumpet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/signin_check" />


            <!-- 네번째 -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/trumpet2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="137dp"
                android:text="@string/signin_list"
                android:textSize="13sp" />



            <!-- 입력폼 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="기본 정보 입력(필수)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="아이디" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="아이디"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="닉네임" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="닉네임(권장)"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="비밀번호" />

                <EditText
                    android:id="@+id/password01"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="비밀번호"
                    android:inputType="textWebPassword"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/password02"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="비밀번호 확인"
                    android:inputType="textWebPassword"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="이름" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="이름"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="이메일" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stroke"
                    android:hint="이메일 주소"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="지역" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spinner_region_1"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        tools:ignore="InvalidId"
                        android:entries="@array/spinner_region"/>

                    <Spinner
                        android:id="@+id/spinner_region_2"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:entries="@array/spinner_region_seoul"/>
                    <Spinner
                        android:id="@+id/spinner_region_3"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:entries="@array/spinner_region_seoul_mapo"/>
                </LinearLayout>


                <ImageButton
                    android:id="@+id/finish_next_btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_arrow_forward_black_100dp"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>